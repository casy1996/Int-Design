<%- include ("./partials/header.ejs") %>

    <title>Int Design - Gallery</title>
</head>
<body>
    <nav class="navBar navBarIndex">
        <h1><a class="logo" href="/">Intelligent Design</a></h1>
        <div class="navLinks">
            <h2><a class="navLinks" href="/gallery">Gallery</a></h2>
            <h2><a class="navLinks" href="/favorites">Favorites</a></h2>
            <h2><a class="navLinks" href="/gallery/new">Create Listing</a></h2>
            <!-- <h2><a class="navLinks" href="/cart">Cart</a></h2> -->
            <a class="navLinks linkToAccount" href="/my_account"><img class="navLinks profileIcon" src='https://i.postimg.cc/SNK1GfHn/user.png'></a>
        </div>
    </nav>
    
    <div class="indexContent">
    <% for (let i = 0; i < gallery.length; i++) { %>
        <div class="container">
            <div class="item">
                <a class="galleryLink" href="/gallery/<%=gallery[i]._id%>">
                    <div class="galleryItem">
                        <div class="indexImage">
                            <img class="itemImageGallery" src="<%=gallery[i].image%>">
                        </div>
                        <div class="indexdetails">
                            <h3 class="indexName"><%= gallery[i].name %> $<%= gallery[i].price%></h3>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    <% } %>
    </div>

